<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://www.castor.org/mapping.dtd">

<mapping>

  <class name="it.f2informatica.mongodb.domain.Role">
    <map-to xml="role"/>
    <field name="id" type="string">
      <bind-xml name="id" node="element"/>
    </field>
    <field name="name" type="string">
      <bind-xml name="name" node="element"/>
    </field>
  </class>

  <class name="it.f2informatica.mongodb.domain.User">
    <map-to xml="user"/>
    <field name="id" type="string">
      <bind-xml name="id" node="element"/>
    </field>
    <field name="username" type="string">
      <bind-xml name="username" node="element"/>
    </field>
    <field name="password" type="string">
      <bind-xml name="password" node="element"/>
    </field>
    <field name="removable" type="boolean">
      <bind-xml name="removable" node="element"/>
    </field>
    <field name="role" type="it.f2informatica.mongodb.domain.Role">
      <bind-xml name="role" node="element"/>
    </field>
  </class>

</mapping>
